<%include partial/header.ejs%>

<div class="container">
	<h1 style="text-align: center;">New Guest Visit</h1>
	<div style="margin: 0 auto; width: 30%;">
		<form action="/checkIn" method="POST" style="margin: 30px 0;">
			<div class="form-group">
				<input class="form-control" type="text" name="hostID" placeholder="Host ID (Ex. AAA )">
			</div>
			<div class="form-group">
					<input class="form-control" type="text" name="guestName" placeholder="Enter Name...">
			</div>
			<div class="form-group">
		<input class="form-control" type="text" name="guestPhone" placeholder="Phone Number">
		</div>

			<div class="form-group">
				<input class="form-control" type="text" name="guestEmail" placeholder="Email">
			</div>
			<div class="form-group">
			<input class="form-control" type="text" name="desc" placeholder="Description...">
			</div>

		<div class="form-group">
		<input class="form-control btn btn-lg btn-primary" type="submit" name="sub">
		</div>
	</form>
	</div>

</div>
<%include partial/footer.ejs%>